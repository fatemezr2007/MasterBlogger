@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
        .article-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        background-color: #ffffff;
    }

    .article-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
    }

    .post-details {
        padding: 30px;
    }

    .post-title {
        color: #343a40;
        line-height: 1.4;
        transition: color 0.2s;
    }

    .post-title:hover {
        color: var(--bs-primary, #0d6efd);
    }

    .article-summary {
        font-size: 0.95rem;
        color: #6c757d !important;
        text-align: justify;
    }


    .post-image-container {
    height: 280px; 
    width: 100%;
    overflow: hidden; 
    display: block;
}

.post-image-container .post-img-fixed {
    width: 100%;
    height: 100%;
    object-fit: cover; 
    transition: transform 0.5s ease;
}

.post-image-container:hover .post-img-fixed {
    transform: scale(1.08);
}


.post-meta .category a.category-badge {
    display: inline-block; 
    padding: 0.5rem 0.8rem;
    background-color: var(--bs-primary, #0d6efd); 
    color: #ffffff !important;
    border-radius: 9999px;
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 600;
    transition: none; 
}

.post-meta .category a.category-badge:hover {
    background-color: var(--bs-primary, #0d6efd); 
    color: #ffffff !important;
    transform: none;
}</style>

<main class="posts-listing col-lg-12 py-5">
    <div class="container">
        <div class="row">

            @foreach (var article in Model.Articles)
            {
                <div class="col-xl-6 mb-5">
                    <div class="article-card shadow-lg border-0 rounded-4 overflow-hidden h-100">
                        
                        <div class="post-thumbnail">
                            <a asp-page="/ArticleDetails" asp-route-id="@article.Id" class="d-block">
                                <div class="post-image-container">
                                    <img src="@article.Image" alt="@article.Title" title="@article.Title" class="img-fluid post-img-fixed">
                                </div>
                            </a>
                        </div>
                        
                        <div class="post-details p-4 p-md-5">
                            
                            <div class="post-meta d-flex justify-content-between align-items-center mb-3">
                                
                                <div class="date meta-style-info">
                                    <i class="far fa-calendar-alt me-2 text-muted"></i>
                                    <span class="text-muted">@article.CreationDate</span>
                                </div>
                                
                                <div class="category">
                                    <a asp-page="/ArticleDetails" asp-route-id="@article.Id" class="category-badge">
                                        @article.ArticleCategury
                                    </a>
                                </div>
                            </div>
                            
                            <a asp-page="/ArticleDetails" asp-route-id="@article.Id" class="title-link text-decoration-none">
                                <h3 class="h4 post-title fw-bold text-dark mb-3">@article.Title</h3>
                            </a>
                            
                            <p class="text-muted article-summary mb-4 border-start border-3 ps-3">
                                @article.ShortDescription
                            </p>
                            
                            <hr class="text-muted my-4">
                            
                            <footer class="post-footer d-flex align-items-center justify-content-end">
                                <div class="comments meta-style-info text-info">
                                    <i class="far fa-comment-dots me-1"></i>
                                    @article.CommentsCount
                                </div>
                            </footer>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</main>